{% extends "ISCPlatformBundle:Activites:viewActuLikeVariables.html.twig" %}

{% block actuLikeTexte %}
    {% for like in userActivites.likes %}
        {% if like.user.id == app.user.id %}
            {% set liked = true %}
            {% set tooltip_like = tooltip_like ~ 'Vous<br />' %}
        {% else %}
            {% set tooltip_like = tooltip_like ~ like.user.username ~ '<br />' %}
        {% endif %}
    {% endfor %}
    {% block actuLikeHtml %}

    {% endblock actuLikeHtml %}
{% endblock actuLikeTexte %}
