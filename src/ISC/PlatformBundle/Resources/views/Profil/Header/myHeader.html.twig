<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 profilUserCouverture carousel slide" style="padding:0px;" id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Photo Profil -->
    <div id="profilUserImage" class="profilUserImage thumbnail" style="padding:0px;">
        <img src="{{ userInformation.urlAvatar }}" alt="" class="img-responsive img-rounded">
        <span class="paramProfilUserImage">
            <a href="#avatarUserUpload" role="button" data-toggle="modal" rel="tooltip" data-original-title='Modifier'>
                <i class="fa fa-cog fa-2x" aria-hidden="true"></i>
            </a>
        </span>
    </div>
    <!-- Modal Change Avatar-->
    <div id="avatarUserUpload" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modifier ma photo de profil</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading" style="text-align: center;">Avatar actuel</div>
                                <div class="panel-body">
                                    <img src="{{ userInformation.urlAvatar }}" alt="" class="img-responsive img-rounded">
                                    <p style="text-align: center;">
                                        <a href="{{ path("isc_platform_profil_pixie_avatar", { 'filename': userInformation.nameAvatar }) }}" class="btn btn-primary btn-sm" role="button" style="padding: 0px;">
                                            Editer l'avatar actuel
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            {{ render(controller("ISCPlatformBundle:Call:getFormChangeAvatar")) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Photo Couverture -->
    <div class="carousel-inner" role="listbox" id="profilUserCover" >
        {% if userInformation.covers|length == 0 %}
            <div class="item active">
                <div class="carousel-page">
                    <img src="{{ asset('assets/images/smile-cover.jpg') }}" alt="Error Image" class="img-responsive" style="margin:0px auto;width:100%;">
                </div>
            </div>
        {% endif %}
        {% for cover in userInformation.covers %}
            <div class="item {% if cover.positionCover == 1 %}active{% endif %}">
                <div class="carousel-page">
                    <img src="{{ cover.urlCover}}" alt="Error Image" class="img-responsive" style="margin:0px auto;width:100%;">
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>

    <span class="paramProfilUserCouverture">
        <a href="#" role="button" data-toggle="modal" rel="tooltip" data-original-title='Gestion de la couverture'><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i></a>
    </span>
</div>