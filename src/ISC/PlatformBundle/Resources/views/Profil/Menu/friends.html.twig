{% set countNbFriends = 0 %}
    {% for friends in userInformation.friends %}
        {% if friends.approvedFriend == true %}
            {% set countNbFriends = countNbFriends + 1 %}
        {% endif %}
    {% endfor %}
    {% if countNbFriends > 0 %}
        {% if isMyFriend is defined and isMyFriend == true %}
            <div class="row" style="text-align:center;margin-top:125px;padding:10px;">
        {% else %}
            <div class="row" style="text-align:center;padding:10px;">
        {% endif %}
            <div class="btn-group btn-group-justified">
                <a href="#showFriends" class="btn btn-primary" data-toggle="modal"><i class="fa fa-users" aria-hidden="true"></i> Amis ({{ countNbFriends }})</a>
            </div>
        </div>
        <div id="showFriends" class="modal fade" role="dialog" style="overflow-y: auto;">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Liste des amis</h4>
                    </div>
                    <div class="modal-body">
                        {% for friends in userInformation.friends %}
                            <img style="float:left;max-height:50px;" src="{{ friends.friend.urlAvatar }}" class="img-rounded img-responsive"/>
                            <strong><a href="{{ path("isc_platform_profil_membres", { 'username': friends.friend.username }) }}">{{ friends.friend.username }}</a></strong>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row" style="text-align:center;padding:10px;">
            <div class="btn-group btn-group-justified">
                <a href="#showFriends" class="btn btn-primary" data-toggle="modal"><i class="fa fa-users" aria-hidden="true"></i> Amis (0)</a>
            </div>
        </div>
        <div id="showFriends" class="modal fade" role="dialog" style="overflow-y: auto;">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Liste des amis</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="alert alert-info"><strong>Information :</strong> Aucun amis</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
<div class="row" style="text-align:center;padding:10px;">
    <div class="btn-group btn-group-justified">
        <a href="{{ path("isc_platform_profil_show_image", { 'username': app.request.get('username') }) }}" class="btn btn-primary"><i class="fa fa-camera" aria-hidden="true"></i> Mes Images ()</a>
    </div>
</div>