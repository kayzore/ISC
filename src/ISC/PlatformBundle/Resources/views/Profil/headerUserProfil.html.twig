<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12 profilUserCouverture carousel slide" style="padding:0px;" id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <div id="profilUserImage" class="profilUserImage thumbnail" style="padding:0px;">
        <!-- Photo Profil -->
        <img src="{% if userAvatars is empty %} {{ asset('assets/images/no-avatar.png') }} {% else %} {{ userAvatars[0].urlAvatar }} {% endif %}" alt="" class="img-responsive img-rounded">
    </div>
    <!-- Modal Change Avatar-->
    <div id="avatarUser" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modifier ma photo de profil</h4>
                </div>


                <form id="formChangeAvatar" method="post" action="#" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <input type="file" name="image" accept="image/*">
                                    <label><input type="checkbox" value="" disabled> Modifier l'image avant enregistrement</label>
                                </div>

                                <div class="form-group" style="margin-bottom: 0;">
                                    <div id="image_preview" class="col-lg-12">
                                        <div class="thumbnail hidden">
                                            <img src="http://placehold.it/5" alt="">
                                            <div class="caption">
                                                <h4></h4>
                                                <p></p>
                                                <p><button type="button" class="btn btn-default btn-danger">Annuler</button></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success pull-right">Enregistrer</button>
                    </div>
                </form>


            </div>
        </div>
    </div>
    <!-- Photo Couverture -->
    <div class="carousel-inner" role="listbox" id="profilUserCover" >
        {% if listMyCover is empty %}
            <div class="item active">
                <div class="carousel-page">
                    <img src="{{ asset('assets/images/smile-cover.jpg') }}" alt="Error Image" class="img-responsive" style="margin:0px auto;width:100%;">
                </div>
            </div>
        {% endif %}
        {% for myCover in listMyCover %}
            <div class="item {% if myCover.positionCover == 1 %}active{% endif %}">
                <div class="carousel-page">
                    <img src="{{ myCover.urlCover}}" alt="Error Image" class="img-responsive" style="margin:0px auto;width:100%;">
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!-- Modal Change Cover-->
<div id="coverUser" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gestion de ma couverture</h4>
            </div>
            <div class="modal-body" id="profilUserChangeListCover">

                BLOCK LIST CHANGE COVER



            </div>
            <div class="modal-footer">
                <a href="#addCoverUser" class="btn btn-success pull-right" role="button" data-toggle="modal">Ajouter un slide</a>
            </div>
        </div>
    </div>
</div>

<!-- Modal ADD Change Cover-->
