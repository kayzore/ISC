{% for activite in userActivites %}
    <div class="row mod_actu" id="' . $idActivite . '" style="padding:20px;margin-bottom:20px;">
        <div class="col-md-12">
            <p>
                <img src="{{ activite.user.urlAvatar }}" class="img-rounded img-responsive pull-left" style="max-height:70px;vertical-align:middle;">
                <strong><a href="{{ path("isc_platform_profil_membres", { 'username': activite.user.username }) }}">{{ activite.user.username }}</a></strong>
            </p>
        </div>
        <hr>
        {% if  activite.textActivity != null %}
        <div class="col-md-12" style="box-shadow: 0px 0px 0px 1px rgba(0,0,0,0.1);display: inline-block;">
            <br />
            <p>{{ activite.textActivity }}</p>
            <img src="{{ activite.image.urlImage }}" style="max-width: 100%;max-height:300px;display: block;margin-left:auto;margin-right:auto;padding-bottom:10px;">
        </div>
        {% else %}
            <div class="col-md-12" style="box-shadow: 0px 0px 0px 1px rgba(0,0,0,0.1);display: inline-block;">
                <img src="{{ activite.image.urlImage }}" style="max-width: 100%;max-height:300px;display: block;margin-left:auto;margin-right:auto;padding-bottom:10px;">
            </div>
        {% endif %}
        <div class="col-md-12 pull-left" style="padding-top:5px;" id="LikeZone{{ activite.id }}">
            <span class="pull-left">
                {% set liked = false %}
                {% set tooltip_like = '' %}
                {% set jsLikeActu = '' %}
                {% set classLikeActu = '' %}
                {% set textLikeActu = '' %}
                {% for like in activite.likes %}
                    {% if like.user.id == app.user.id %}
                        {% set liked = true %}
                        {% set tooltip_like = tooltip_like ~ 'Vous<br />' %}
                    {% else %}
                        {% set tooltip_like = tooltip_like ~ like.user.username ~ '<br />' %}
                    {% endif %}
                {% endfor %}
                {% if liked == true %}
                    {% set jsLikeActu = 'javascript:DelLike(this.getAttribute(\'id\'));' %}
                    {% set classLikeActu = 'btn btn-success btn-xs clickable' %}
                    {% set textLikeActu = '<i class="fa fa-thumbs-up"></i> J<span style="text-transform:lowercase;">\'aime</span> <span id="loadLike' ~ like.activite.id ~ '" style="display:none;"><i class="fa fa-spinner fa-pulse fa-fw"></i> Loading</span></a>' %}
                {% else %}
                    {% set jsLikeActu = 'javascript:AddLike(this.getAttribute(\'id\'));' %}
                    {% set classLikeActu = 'btn btn-primary btn-xs clickable' %}
                    {% set textLikeActu = '' %}
                    {% set textLikeActu = '<i class="fa fa-thumbs-o-up"></i> J<span style="text-transform:lowercase;">\'aime</span> <span id="loadLike' ~ like.activite.id ~ '" style="display:none;"><i class="fa fa-spinner fa-pulse fa-fw"></i> Loading</span></a>' %}
                {% endif %}
                <a onclick="{{ jsLikeActu }}" id="{{ activite.id }}" class="{{ classLikeActu }}">{{ textLikeActu }} |
                    <a data-toggle="tooltip" title="{{ tooltip_like }}" class="my_tooltip" style="text-transform:lowercase;color:black;text-decoration:none;">
                        {{ activite.likes|length }} <i class="fa fa-heart"></i>
                    </a>
                </a>
            </span>
            <span class="pull-right"><i class="fa fa-calendar"></i> {{ activite.datetimeActivity|date('d-m-Y H:i:s') }}</span>
        </div>
    </div>
{% endfor %}