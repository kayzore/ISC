function acceptInvitation(id){
    $.ajax({
        type: 'POST',
        url: '{{ path("isc_platform_homepage_accept_invite_of_member") }}',
        data: {id: id},
        success: function(retour){
            if(retour == 'success'){
                location.reload();
            }
        }
    });
}
